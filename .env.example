# ===========================================
# DATABASE
# ===========================================
# Get this from MongoDB Atlas: https://cloud.mongodb.net/
# Format: mongodb+srv://username:password@cluster.mongodb.net/mulaboard?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# ===========================================
# AUTHENTICATION (NextAuth.js v5)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
# For local development use http://localhost:3000
# For production use your actual domain (e.g., https://mulaboard.com)
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# CLOUDINARY (Image Upload)
# ===========================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
# Public key for client-side uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# ===========================================
# UPSTASH REDIS (Rate Limiting)
# ===========================================
# Get these from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ===========================================
# HCAPTCHA (Bot Prevention)
# ===========================================
# Get these from: https://www.hcaptcha.com/
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key

# ===========================================
# FINGERPRINTJS (Browser Identification)
# ===========================================
# Get from: https://fingerprint.com/ (Optional - free version available)
# Leave empty to use the free open-source version
NEXT_PUBLIC_FINGERPRINT_API_KEY=

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MulaBoard

# ===========================================
# ADMIN SETUP (Initial Admin Creation)
# ===========================================
# Used by seed scripts to create the first admin user
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_FULL_NAME=Admin User
